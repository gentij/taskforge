generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ApiToken {
  id         String   @id @default(cuid())
  name       String
  tokenHash  String   @unique
  scopes     String[]
  createdAt  DateTime @default(now())
  lastUsedAt DateTime?
  revokedAt  DateTime?
}

model Workflow {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)

  versions  WorkflowVersion[] @relation("WorkflowVersions")
  triggers  Trigger[]

  latestVersionId String? @unique
  latestVersion   WorkflowVersion? @relation("WorkflowLatestVersion", fields: [latestVersionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([createdAt])
}

enum TriggerType {
  MANUAL
  WEBHOOK
  CRON
}

model Trigger {
  id         String      @id @default(cuid())
  workflowId String
  type       TriggerType
  name       String?
  isActive   Boolean     @default(true)

  config     Json        @default("{}")

  workflow   Workflow    @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([workflowId])
  @@index([type])
  @@index([isActive])
}

model WorkflowVersion {
  id         String   @id @default(cuid())

  workflowId String
  workflow   Workflow @relation("WorkflowVersions", fields: [workflowId], references: [id], onDelete: Cascade)

  version    Int
  definition Json

  createdAt  DateTime @default(now())

  latestFor  Workflow? @relation("WorkflowLatestVersion")

  @@unique([workflowId, version])
  @@index([workflowId])
  @@index([createdAt])
}
