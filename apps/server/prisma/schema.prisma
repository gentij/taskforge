generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ApiToken {
  id         String   @id @default(cuid())
  name       String
  tokenHash  String   @unique
  scopes     String[]
  createdAt  DateTime @default(now())
  lastUsedAt DateTime?
  revokedAt  DateTime?
}

model Workflow {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)

  versions  WorkflowVersion[] @relation("WorkflowVersions")
  triggers  Trigger[]
  runs      WorkflowRun[]

  latestVersionId String? @unique
  latestVersion   WorkflowVersion? @relation("WorkflowLatestVersion", fields: [latestVersionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([createdAt])
}

enum TriggerType {
  MANUAL
  WEBHOOK
  CRON
}

model Trigger {
  id         String      @id @default(cuid())
  workflowId String
  type       TriggerType
  name       String?
  isActive   Boolean     @default(true)

  config     Json        @default("{}")

  workflow   Workflow    @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  events     Event[]
  runs       WorkflowRun[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([workflowId])
  @@index([type])
  @@index([isActive])
}

model Event {
  id         String   @id @default(cuid())
  triggerId  String
  type       String?
  externalId String?
  payload    Json     @default("{}")
  receivedAt DateTime @default(now())
  createdAt  DateTime @default(now())

  trigger    Trigger  @relation(fields: [triggerId], references: [id], onDelete: Cascade)
  run        WorkflowRun?

  @@index([triggerId])
  @@index([receivedAt])
  @@unique([triggerId, externalId])
}

enum WorkflowRunStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

model WorkflowRun {
  id                String            @id @default(cuid())
  workflowId        String
  workflowVersionId String
  triggerId         String?
  eventId           String?           @unique
  status            WorkflowRunStatus @default(QUEUED)
  input             Json              @default("{}")
  output            Json?
  startedAt         DateTime?
  finishedAt        DateTime?

  workflow          Workflow          @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  workflowVersion   WorkflowVersion   @relation(fields: [workflowVersionId], references: [id], onDelete: Cascade)
  trigger           Trigger?          @relation(fields: [triggerId], references: [id], onDelete: SetNull)
  event             Event?            @relation(fields: [eventId], references: [id], onDelete: SetNull)

  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([workflowId])
  @@index([workflowVersionId])
  @@index([triggerId])
  @@index([status])
  @@index([createdAt])
}

model WorkflowVersion {
  id         String   @id @default(cuid())

  workflowId String
  workflow   Workflow @relation("WorkflowVersions", fields: [workflowId], references: [id], onDelete: Cascade)

  runs       WorkflowRun[]

  version    Int
  definition Json

  createdAt  DateTime @default(now())

  latestFor  Workflow? @relation("WorkflowLatestVersion")

  @@unique([workflowId, version])
  @@index([workflowId])
  @@index([createdAt])
}
